<h1 id="banner"> Welcome <%= @user.username %> </h1>

<div id="idea_form">
  <%= form_for(:idea, url: user_path) do |f|%>

  <%= f.label :title %><br/>
    <%= f.text_field :title %>

    <%= f.label :description %><br/>
    <%= f.text_area :description %>


    <%= f.submit "Create" %>
    <% end %>
  </div>

    <ul id="ideas"
    <%= @user.ideas.each do |idea| %>
    <li>title: <%= idea.title %> </li>
    <li>description <%= idea.description %></li>
      <% end %>
    </ul>
